@model LabERP.Models.ViewModels.CreateEquipmentViewModel

@{
    ViewData["Title"] = "新增設備";
}

<link rel="stylesheet" href="~/css/site.css" />
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>設備管理- @Model.Name</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-4">
        <h2 class="mb-4 text-primary fw-bold">
            <i class="fas fa-plus-circle me-2"></i>新增設備
        </h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" id="validation-summary"></div>

                    <input asp-for="LaboratoryID" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control shadow-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TotalQuantity" class="form-label"></label>
                        <input asp-for="TotalQuantity" class="form-control shadow-sm" type="number" min="1" />
                        <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PurchaseDate" class="form-label"></label>
                        <input asp-for="PurchaseDate" class="form-control shadow-sm" type="date" />
                        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">                     
                        <a asp-controller="Equipment" asp-action="Index" asp-route-labID="@Model.LaboratoryID" class="btn btn-secondary shadow-sm">
                            <i class="fas fa-arrow-left me-1"></i>返回
                        </a>
                        <button type="submit" class="btn btn-primary shadow-sm">
                            <i class="fas fa-plus me-1"></i>新增
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>