@model List<WebApplication1.Models.Core.Equipment>

@{
    ViewData["Title"] = "設備列表";
    var lab = ViewBag.Laboratory as WebApplication1.Models.Core.Laboratory;
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="row">
    <div class="col-md-12">
        <h2>@lab.Name - 設備管理</h2>
        <hr />
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row mb-3">
    <div class="col-md-12">
        @if (User.IsInRole("Professor") && User.FindFirst("UserID").Value == lab.Creator.UserID)
        {
            <a asp-controller="Equipment" asp-action="Create" asp-route-labID="@lab.LabID" class="btn btn-success">新增設備</a>
        }
        <a asp-controller="Laboratory" asp-action="Details" asp-route-id="@lab.LabID" class="btn btn-secondary">返回實驗室</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                設備列表
            </div>
            <div class="card-body">
                @if (Model.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>設備名稱</th>
                                <th>描述</th>
                                <th>總數量</th>
                                <th>可用數量</th>
                                <th>購入日期</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var equipment in Model)
                            {
                                <tr>
                                    <td>@equipment.Name</td>
                                    <td>@equipment.Description</td>
                                    <td>@equipment.TotalQuantity</td>
                                    <td>@equipment.AvailableQuantity</td>
                                    <td>@equipment.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                    <td>@equipment.Status</td>
                                    <td>
                                        @if (User.IsInRole("Professor") && User.FindFirst("UserID").Value == lab.Creator.UserID)
                                        {
                                            <form asp-controller="Equipment" asp-action="Delete" method="post" onsubmit="return confirm('確定要刪除此設備嗎？');">
                                                <input type="hidden" name="id" value="@equipment.EquipmentID" />
                                                <button type="submit" class="btn btn-sm btn-danger">刪除</button>
                                            </form>
                                        }
                                        @if (User.IsInRole("Student") && equipment.AvailableQuantity > 0)
                                        {
                                            <a asp-controller="Equipment" asp-action="Borrow" asp-route-id="@equipment.EquipmentID" class="btn btn-sm btn-primary">借用</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>目前沒有設備。</p>
                }
            </div>
        </div>
    </div>
</div>