@model LabERP.Models.ViewModels.CreateExpenseRequestViewModel

@{
    ViewData["Title"] = "新增報帳申請";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="row">
    <div class="col-md-12">
        <h2>
            <i class="fas fa-plus-circle"></i> 新增報帳申請 - @Model.LaboratoryName
        </h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-file-invoice"></i> 報帳申請表單
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="LaboratoryId" />
                    <input type="hidden" asp-for="LaboratoryName" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label">
                                <i class="fas fa-dollar-sign"></i> 金額 <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">NT$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="InvoiceNumber" class="form-label">
                                <i class="fas fa-receipt"></i> 發票號碼 <span class="text-danger">*</span>
                            </label>
                            <input asp-for="InvoiceNumber" class="form-control" placeholder="請輸入發票號碼" />
                            <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">
                            <i class="fas fa-tags"></i> 報帳類別 <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Category" class="form-select">
                            <option value="">請選擇類別</option>
                            <option value="設備採購">設備採購</option>
                            <option value="材料費">材料費</option>
                            <option value="差旅費">差旅費</option>
                            <option value="其他">其他</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left"></i> 描述 <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Description" class="form-control" placeholder="請簡述報帳項目" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="form-text">最多200個字元</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Purpose" class="form-label">
                            <i class="fas fa-info-circle"></i> 用途說明 <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Purpose" class="form-control" rows="4" placeholder="請詳細說明此項支出的用途"></textarea>
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                        <div class="form-text">最多500個字元</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-paperclip"></i> 附件 (發票/收據圖片或PDF)
                        </label>
                        <input type="file" name="Attachments" class="form-control" multiple
                               accept="image/jpeg,image/jpg,image/png,application/pdf" />
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i>
                            支援格式：JPG, PNG, PDF，單個檔案最大5MB
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" asp-route-laboratoryId="@Model.LaboratoryId"
                                   class="btn btn-secondary me-md-2">
                                    <i class="fas fa-times"></i> 取消
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> 提交申請
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-lightbulb"></i> 填寫提示
            </div>
            <div class="card-body">
                <h6><i class="fas fa-check-circle text-success"></i> 填寫要點：</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-arrow-right text-primary"></i> 請確實填寫所有必填欄位</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> 金額請與發票一致</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> 請清楚說明支出用途</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> 建議上傳發票圖片</li>
                </ul>

                <hr />

                <h6><i class="fas fa-exclamation-triangle text-warning"></i> 注意事項：</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-arrow-right text-warning"></i> 提交後將通知教授審核</li>
                    <li><i class="fas fa-arrow-right text-warning"></i> 未審核前可以刪除申請</li>
                    <li><i class="fas fa-arrow-right text-warning"></i> 審核通過後將從預算中扣除</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // 檔案上傳驗證
        $('input[type="file"]').on('change', function() {
            var files = this.files;
            var maxSize = 5 * 1024 * 1024; // 5MB
            var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];

            for (var i = 0; i < files.length; i++) {
                var file = files[i];

                // 檢查檔案大小
                if (file.size > maxSize) {
                    alert('檔案 "' + file.name + '" 超過5MB限制');
                    this.value = '';
                    return;
                }

                // 檢查檔案類型
                if (!allowedTypes.includes(file.type)) {
                    alert('檔案 "' + file.name + '" 格式不支援，請選擇JPG、PNG或PDF格式');
                    this.value = '';
                    return;
                }
            }
        });

        // 字數統計
        $('#Description').on('input', function() {
            var maxLength = 200;
            var currentLength = $(this).val().length;
            var remaining = maxLength - currentLength;

            if (remaining < 0) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        $('#Purpose').on('input', function() {
            var maxLength = 500;
            var currentLength = $(this).val().length;
            var remaining = maxLength - currentLength;

            if (remaining < 0) {
                $(this).addClass('is-invalid');
            } else {
                $(this).removeClass('is-invalid');
            }
        });

        // 表單提交驗證
        $('form').on('submit', function(e) {
            var isValid = true;

            // 檢查必填欄位
            $('input[required], select[required], textarea[required]').each(function() {
                if (!$(this).val().trim()) {
                    $(this).addClass('is-invalid');
                    isValid = false;
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            if (!isValid) {
                e.preventDefault();
                showAlert('danger', '請填寫所有必填欄位');
            }
        });

        function showAlert(type, message) {
            var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                           message +
                           '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                           '</div>';
            $('.card:first').before(alertHtml);
        }
    </script>
}