@model LabERP.Models.ViewModels.SalaryManagementViewModel

@{
    ViewData["Title"] = "薪資管理";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>薪資管理 - @Model.LaboratoryName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <!-- 頁面標題與麵包屑 -->
        <div class="mb-4">
            <h2><i class="fas fa-coins text-primary me-2"></i>@Model.LaboratoryName - 薪資管理</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Laboratory" asp-action="Details" asp-route-id="@Model.LaboratoryId">實驗室</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Finance", new { LabID = Model.LaboratoryId })">財務管理</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-money-check-alt"></i> 薪資管理
                    </li>
                </ol>
            </nav>
        </div>

        <!-- 系統訊息 -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- 表單 -->
        <form asp-action="SubmitSalary" asp-controller="Finance" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="LaboratoryId" value="@Model.LaboratoryId" />

            <div class="mb-3">
                <label for="EmployeeName" class="form-label">
                    <i class="fas fa-user"></i> 員工姓名
                </label>
                <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" required />
            </div>

            <div class="mb-3">
                <label for="Amount" class="form-label">
                    <i class="fas fa-dollar-sign"></i> 薪資金額
                </label>
                <input type="number" class="form-control" id="Amount" name="Amount" required min="0" step="1000" />
            </div>

            <div class="mb-3">
                <label for="PayDate" class="form-label">
                    <i class="fas fa-calendar-alt"></i> 發薪日期
                </label>
                <input type="date" class="form-control" id="PayDate" name="PayDate" required />
            </div>

            <div class="mb-3">
                <label for="Note" class="form-label">
                    <i class="fas fa-note-sticky"></i> 備註
                </label>
                <textarea class="form-control" id="Note" name="Note" rows="3"></textarea>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> 儲存
                </button>
                <a href="@Url.Action("Index", "Finance", new { LabID = Model.LaboratoryId })" class="btn btn-secondary ms-2">返回</a>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
