@model LabERP.Models.Core.User

@{
    ViewData["Title"] = "儀表板";
}

<link rel="stylesheet" href="~/css/site.css" />

<h2>歡迎，@Model.Username!</h2>
<partial name="_LoginPartial" />

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                用戶資訊
            </div>
            <div class="card-body">
                <p><strong>用戶名稱:</strong> @Model.Username</p>
                <p><strong>電子郵件:</strong> @Model.Email</p>
                <p><strong>角色:</strong> @Model.Role</p>

                @if (Model is LabERP.Models.Core.Student student)
                {
                    <p><strong>學號:</strong> @(string.IsNullOrEmpty(student.StudentID) ? "尚未設定" : student.StudentID)</p>
                    <p><strong>手機號碼:</strong> @(string.IsNullOrEmpty(student.PhoneNumber) ? "尚未設定" : student.PhoneNumber)</p>
                    <a asp-controller="User" asp-action="EditProfile" class="btn btn-info">編輯個人資料</a>
                }

                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-primary mt-2">修改密碼</a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (User.IsInRole("Professor"))
        {
            <div class="card mb-3">
                <div class="card-header">
                    教授功能
                </div>
                <div class="card-body">
                    <a asp-controller="Laboratory" asp-action="Create" class="btn btn-success">創建實驗室</a>

                    @if (Model is LabERP.Models.Core.Professor professor)
                    {
                        <h4 class="mt-3">我的實驗室</h4>
                        <ul class="list-group">
                            @foreach (var lab in professor.Laboratories)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @lab.Name
                                    <div>
                                        <a asp-controller="Laboratory" asp-action="Details" asp-route-id="@lab.LabID" class="btn btn-sm btn-info">查看</a>
                                        <a asp-controller="Laboratory" asp-action="AddMember" asp-route-id="@lab.LabID" class="btn btn-sm btn-primary">添加成員</a>
                                        <!-- 添加打卡管理按鈕 -->
                                        <a asp-controller="WorkSession" asp-action="LabAttendance" asp-route-labId="@lab.LabID" class="btn btn-sm btn-warning">打卡管理</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        }

        @if (User.IsInRole("Student"))
        {
            <div class="card mb-3">
                <div class="card-header">
                    學生功能
                </div>
                <div class="card-body">
                    <!-- 添加直接連結到借用記錄頁面 -->
                    <a asp-controller="Equipment" asp-action="MyEquipments" class="btn btn-primary mb-3">查看我的借用記錄</a>

                    @{
                        var studentLabs = ViewBag.StudentLaboratories as List<LabERP.Models.Core.Laboratory>
                        ?? new List<LabERP.Models.Core.Laboratory>();
                    }

                    @if (studentLabs.Any())
                    {
                        <h4>我所屬的實驗室</h4>
                        <ul class="list-group">
                            @foreach (var lab in studentLabs)
                            {
                                <li class="list-group-item">
                                    <div><strong>實驗室名稱:</strong> @lab.Name</div>
                                    <div><strong>指導教授:</strong> @lab.Creator.Username</div>
                                    <div class="mt-2">
                                        <a asp-controller="Laboratory" asp-action="Details" asp-route-id="@lab.LabID" class="btn btn-sm btn-info">查看詳細資訊</a>
                                        <!-- 添加打卡按鈕 -->
                                        <a asp-controller="WorkSession" asp-action="Index" asp-route-labId="@lab.LabID" class="btn btn-sm btn-success">
                                            <i class="fas fa-clock"></i> 打卡
                                        </a>
                                        <!-- 添加查看打卡記錄按鈕 -->
                                        <a asp-controller="WorkSession" asp-action="Records" asp-route-labId="@lab.LabID" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-history"></i> 打卡記錄
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>您目前不屬於任何實驗室。</p>
                    }
                </div>
            </div>
        }

        <!-- 通用打卡功能區塊 -->
        @{
            var allLabs = new List<LabERP.Models.Core.Laboratory>();
            if (User.IsInRole("Professor") && Model is LabERP.Models.Core.Professor prof)
            {
                allLabs = prof.Laboratories.ToList();
            }
            else if (User.IsInRole("Student"))
            {
                var studentLabs = ViewBag.StudentLaboratories as List<LabERP.Models.Core.Laboratory>;
                if (studentLabs != null)
                {
                    allLabs = studentLabs;
                }
            }
        }

        @if (allLabs.Any())
        {
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-clock"></i> 打卡系統快速入口
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var lab in allLabs)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="card border-left-primary">
                                    <div class="card-body p-3">
                                        <h6 class="card-title">@lab.Name</h6>
                                        <div class="btn-group-sm">
                                            @if (User.IsInRole("Student"))
                                            {
                                                <a asp-controller="WorkSession" asp-action="Index" asp-route-labId="@lab.LabID" class="btn btn-success btn-sm">
                                                    <i class="fas fa-play"></i> 打卡
                                                </a>
                                                <a asp-controller="WorkSession" asp-action="Records" asp-route-labId="@lab.LabID" class="btn btn-outline-primary btn-sm">
                                                    記錄
                                                </a>
                                            }
                                            @if (User.IsInRole("Professor"))
                                            {
                                                <a asp-controller="WorkSession" asp-action="LabAttendance" asp-route-labId="@lab.LabID" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-users"></i> 管理
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>