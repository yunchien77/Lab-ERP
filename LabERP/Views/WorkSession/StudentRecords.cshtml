@model LabERP.Models.ViewModels.StudentWorkRecordsViewModel
@{
    ViewData["Title"] = Model.StudentName + " 的工作記錄";
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>打卡系統 - @Model.LabName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <style>
        :root {
            --primary-color: #2563eb;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #06b6d4;
            --bg-light: #f8fafc;
            --card-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
            --hover-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            background: var(--bg-light);
            border-radius: 20px;
            margin: 20px;
            padding: 30px;
            box-shadow: var(--hover-shadow);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }

        .header-section {
            background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

            .header-section::before {
                content: '';
                position: absolute;
                top: 0;
                right: -50%;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, rgba(255,255,255,0.1), transparent);
                transform: skew(-15deg);
            }

        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 20px; /* 從 25px 調小 */
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            border: none;
            position: relative;
            overflow: hidden;
            height: auto; /* 原本是 100%，改為自動高度 */
            min-height: 160px; /* 你可以微調這個高度 */
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--hover-shadow);
            }

            .stats-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 100%;
                background: var(--primary-color);
            }

            .stats-card.income::before {
                background: var(--success-color);
            }

            .stats-card.expense::before {
                background: var(--danger-color);
            }

            .stats-card.balance::before {
                background: var(--info-color);
            }

        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 15px;
        }

        .income .stats-icon {
            background: linear-gradient(135deg, var(--success-color), #059669);
        }

        .expense .stats-icon {
            background: linear-gradient(135deg, var(--danger-color), #dc2626);
        }

        .balance .stats-icon {
            background: linear-gradient(135deg, var(--info-color), #0891b2);
        }

        .stats-value {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1f2937;
            margin: 0;
        }

        .stats-label {
            color: #6b7280;
            font-size: 1rem;
            font-weight: 500;
            margin: 0;
        }

        .action-btn {
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            margin-right: 10px;
            margin-bottom: 10px;
        }

            .action-btn:hover {
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn-add-income {
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
        }

            .btn-add-income:hover {
                color: white;
            }

        .btn-salary {
            background: linear-gradient(135deg, var(--warning-color), #d97706);
            color: white;
        }

            .btn-salary:hover {
                color: white;
            }

        .btn-bank {
            background: linear-gradient(135deg, var(--info-color), #0891b2);
            color: white;
        }

            .btn-bank:hover {
                color: white;
            }

        .records-section {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: var(--card-shadow);
            margin-top: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .table-modern {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

            .table-modern thead {
                background: linear-gradient(135deg, #f8fafc, #e2e8f0);
            }

            .table-modern th {
                border: none;
                padding: 15px;
                font-weight: 600;
                color: #374151;
            }

            .table-modern td {
                border: none;
                padding: 15px;
                vertical-align: middle;
            }

            .table-modern tbody tr {
                transition: all 0.2s ease;
            }

                .table-modern tbody tr:hover {
                    background: #f8fafc;
                    transform: scale(1.01);
                }

        .badge-modern {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .badge-income {
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
        }

        .badge-expense {
            background: linear-gradient(135deg, var(--danger-color), #dc2626);
            color: white;
        }

        .amount-positive {
            color: var(--success-color);
            font-weight: 600;
        }

        .amount-negative {
            color: var(--danger-color);
            font-weight: 600;
        }

        .no-records {
            text-align: center;
            padding: 40px;
            color: #6b7280;
        }

            .no-records i {
                font-size: 3rem;
                margin-bottom: 20px;
                opacity: 0.5;
            }

        .back-btn {
            background: linear-gradient(135deg, #6b7280, #4b5563);
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                transform: translateY(-2px);
                color: white;
                text-decoration: none;
            }

        .error-container {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: var(--card-shadow);
            text-align: center;
            margin: 20px;
        }

        .error-icon {
            font-size: 4rem;
            color: var(--danger-color);
            margin-bottom: 20px;
        }


        .animate-fade-in {
            animation: fadeIn 0.6s ease-out;
        }

    </style>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow rounded">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0"><i class="fas fa-user-clock me-2"></i>@Model.StudentName 的工作記錄</h4>
                            <small>實驗室：@Model.LabName</small>
                        </div>
                        <a href="@Url.Action("LabAttendance", new { labId = Model.LabID })" class="btn btn-light text-dark">
                            <i class="fas fa-arrow-left"></i> 返回
                        </a>
                    </div>

                    <div class="card-body">
                        <!-- 統計摘要 -->
                        @if (Model.Summary != null)
                        {
                            <div class="row mb-4">
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-gradient bg-primary text-white shadow-sm">
                                        <div class="card-body text-center">
                                            <h4>@Model.Summary.TotalHours.ToString("F1")</h4>
                                            <p class="mb-0">總工作時數</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-gradient bg-success text-white shadow-sm">
                                        <div class="card-body text-center">
                                            <h4>@Model.Summary.TotalSessions</h4>
                                            <p class="mb-0">打卡次數</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-gradient bg-info text-white shadow-sm">
                                        <div class="card-body text-center">
                                            <h4>@Model.WorkSessions.Count(ws => ws.Status == LabERP.Models.Core.WorkStatus.Completed)</h4>
                                            <p class="mb-0">工作天數</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="card bg-gradient bg-warning text-white shadow-sm">
                                        <div class="card-body text-center">
                                            <h4>@Model.Summary.AverageHoursPerSession.ToString("F1")</h4>
                                            <p class="mb-0">平均時數/次</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- 詳細記錄 -->
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-list me-2"></i>詳細工作記錄
                                    <small class="text-muted">(@Model.StartDate:yyyy-MM-dd ~ @Model.EndDate:yyyy-MM-dd)</small>
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (Model.WorkSessions.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>日期</th>
                                                    <th>開始時間</th>
                                                    <th>結束時間</th>
                                                    <th>工作時數</th>
                                                    <th>狀態</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var session in Model.WorkSessions.OrderByDescending(s => s.StartTime))
                                                {
                                                    <tr>
                                                        <td>@session.StartTime:yyyy-MM-dd</td>
                                                        <td>@session.StartTime:HH:mm:ss</td>
                                                        <td>
                                                            @if (session.EndTime.HasValue)
                                                            {
                                                                @session.EndTime.Value.ToString("HH:mm:ss")
                                                            }
                                                            else
                                                            {
                                                                <span class="text-warning">進行中</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (session.Status == LabERP.Models.Core.WorkStatus.Completed || session.Status == LabERP.Models.Core.WorkStatus.Working)
                                                            {
                                                                var badgeClass = session.Status == LabERP.Models.Core.WorkStatus.Completed ? "bg-success" : "bg-warning";
                                                                <span class="badge @badgeClass">@session.GetWorkHours():F2 小時</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @switch (session.Status)
                                                            {
                                                                case LabERP.Models.Core.WorkStatus.Working:
                                                                    <span class="badge bg-success"><i class="fas fa-play-circle me-1"></i>工作中</span>
                                                                    break;
                                                                case LabERP.Models.Core.WorkStatus.Completed:
                                                                    <span class="badge bg-secondary"><i class="fas fa-check-circle me-1"></i>已完成</span>
                                                                    break;
                                                                default:
                                                                    <span class="badge bg-light text-dark"><i class="fas fa-minus-circle me-1"></i>未開始</span>
                                                                    break;
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">此期間沒有工作記錄</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div> <!-- card-body -->
                </div> <!-- card -->
            </div>
        </div>
    </div>
</body>
</html>