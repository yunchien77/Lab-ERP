@model WebApplication1.Models.ViewModels.BorrowEquipmentViewModel

@{
    ViewData["Title"] = "借用設備";
    var equipment = ViewBag.Equipment as WebApplication1.Models.Core.Equipment;
}

<link rel="stylesheet" href="~/css/site.css" />

<h2>借用設備</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                設備資訊
            </div>
            <div class="card-body">
                <p><strong>設備名稱:</strong> @equipment.Name</p>
                <p><strong>描述:</strong> @equipment.Description</p>
                <p><strong>可用數量:</strong> @equipment.AvailableQuantity</p>
            </div>
        </div>

        <form asp-action="Borrow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EquipmentID" type="hidden" />
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" min="1" max="@equipment.AvailableQuantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">借用</button>
                <a asp-controller="Equipment" asp-action="Index" asp-route-labID="@equipment.LaboratoryID" class="btn btn-secondary">返回</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}