@model WebApplication1.Models.Core.Laboratory

@{
    ViewData["Title"] = "實驗室詳情";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                基本資訊
            </div>
            <div class="card-body">
                <p><strong>實驗室名稱:</strong> @Model.Name</p>
                <p><strong>描述:</strong> @Model.Description</p>
                @if (!string.IsNullOrEmpty(Model.Website))
                {
                    <p><strong>網站:</strong> @Model.Website</p>
                }
                @if (!string.IsNullOrEmpty(Model.ContactInfo))
                {
                    <p><strong>聯絡資訊:</strong> @Model.ContactInfo</p>
                }
                <p><strong>創建者:</strong> @Model.Creator.Username</p>

                @if (User.IsInRole("Professor") && User.FindFirst("UserID").Value == Model.Creator.UserID)
                {
                    <a asp-controller="Laboratory" asp-action="AddMember" asp-route-id="@Model.LabID" class="btn btn-primary">添加成員</a>
                    <a asp-controller="Laboratory" asp-action="Edit" asp-route-id="@Model.LabID" class="btn btn-info">編輯實驗室</a>
                }
                <a asp-controller="Equipment" asp-action="Index" asp-route-labID="@Model.LabID" class="btn btn-success mt-2">設備管理</a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                成員列表
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>用戶名稱</th>
                            <th>電子郵件</th>
                            <th>角色</th>
                            @if (User.IsInRole("Professor") && User.FindFirst("UserID").Value == Model.Creator.UserID)
                            {
                                <th>學號</th>
                                <th>手機號碼</th>
                                <th>操作</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model.Members)
                        {
                            <tr>
                                <td>@member.Username</td>
                                <td>@member.Email</td>
                                <td>@member.Role</td>
                                @if (User.IsInRole("Professor") && User.FindFirst("UserID").Value == Model.Creator.UserID)
                                {
                                    <td>
                                        @if (member is WebApplication1.Models.Core.Student student)
                                        {
                                            @(string.IsNullOrEmpty(student.StudentID) ? "-" : student.StudentID)
                                        }
                                        else
                                        {
                                            @("-")
                                        }
                                    </td>
                                    <td>
                                        @if (member is WebApplication1.Models.Core.Student student2)
                                        {
                                            @(string.IsNullOrEmpty(student2.PhoneNumber) ? "-" : student2.PhoneNumber)
                                        }
                                        else
                                        {
                                            @("-")
                                        }
                                    </td>
                                    <td>
                                        <form asp-controller="Laboratory" asp-action="RemoveMember" method="post">
                                            <input type="hidden" name="labID" value="@Model.LabID" />
                                            <input type="hidden" name="memberID" value="@member.UserID" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('確定要刪除此成員嗎？');">刪除</button>
                                        </form>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a asp-controller="User" asp-action="Dashboard" class="btn btn-secondary">返回</a>
</div>