@model WebApplication1.Models.Core.User

@{
    ViewData["Title"] = "儀表板";
}

<h2>歡迎，@Model.Username!</h2>
<partial name="_LoginPartial" />

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                用戶資訊
            </div>
            <div class="card-body">
                <p><strong>用戶名稱:</strong> @Model.Username</p>
                <p><strong>電子郵件:</strong> @Model.Email</p>
                <p><strong>角色:</strong> @Model.Role</p>
                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-primary">修改密碼</a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (User.IsInRole("Professor"))
        {
            <div class="card">
                <div class="card-header">
                    教授功能
                </div>
                <div class="card-body">
                    <a asp-controller="Laboratory" asp-action="Create" class="btn btn-success">創建實驗室</a>

                    @if (Model is WebApplication1.Models.Core.Professor professor)
                    {
                        <h4 class="mt-3">我的實驗室</h4>
                        <ul class="list-group">
                            @foreach (var lab in professor.Laboratories)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @lab.Name
                                    <div>
                                        <a asp-controller="Laboratory" asp-action="Details" asp-route-id="@lab.LabID" class="btn btn-sm btn-info">查看</a>
                                        <a asp-controller="Laboratory" asp-action="AddMember" asp-route-id="@lab.LabID" class="btn btn-sm btn-primary">添加成員</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        }
        else if (User.IsInRole("Student"))
        {
            <div class="card">
                <div class="card-header">
                    學生功能
                </div>
                <div class="card-body">
                    <p>您目前沒有可用的功能。</p>
                </div>
            </div>
        }
    </div>
</div>